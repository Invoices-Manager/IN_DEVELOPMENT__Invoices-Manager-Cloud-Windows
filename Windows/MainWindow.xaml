<Window x:Class="InvoicesManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:local="clr-namespace:InvoicesManager"
        ui:WindowHelper.UseModernWindowStyle="True"
        mc:Ignorable="d"
        Title="Invoices Manager | Made by Schecher | Vers 1.0.0.0 | https://github.com/Schecher1" 
        Height="1000" Width="1000"
        WindowState="Maximized">
    <Grid Background="#FF4A4A4A">
        <Grid >
            <ToolBarPanel Orientation="Horizontal" VerticalAlignment="Top" Height="35">
                <Button x:Name="Bttn_InvoiceAdd" Content="Rechung hinzufügen" Foreground="White" Margin="5,0,5,0" Click="Bttn_InvoiceAdd_Click"/>
                <Button x:Name="Bttn_InvoiceEdit" Content="Rechung bearbeiten" Foreground="White" Margin="5,0,5,0" Click="Bttn_InvoiceEdit_Click"/>
                <Button x:Name="Bttn_InvoiceRemove"  Content="Rechung entfernen" Foreground="White" Margin="5,0,5,0" Click="Bttn_InvoiceRemove_Click"/>
                <Separator Margin="10,0,10,0"/>
                <Button x:Name="Bttn_Settings" Content="Einstellungen" Foreground="White" Margin="5,0,5,0" Click="Bttn_Settings_Click"/>
                <Separator Margin="10,0,10,0"/>
                <Button x:Name="Bttn_About" Content="Über" Foreground="White" Margin="5,0,5,0" Click="Bttn_About_Click"/>
            </ToolBarPanel>
        </Grid>

        <Grid HorizontalAlignment="Right" Width="350" Margin="0,35,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel>
                    <GroupBox Header="Suchen Nach: Betreff" Margin="10,10,10,10" BorderThickness="1,1,1,1" BorderBrush="Black">
                        <Grid>
                            <TextBox x:Name="Tb_Search_String" Margin="5,5,5,5" VerticalAlignment="Center" TextChanged="Tb_Search_String_TextChanged"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Suchen Nach: Rechnungs NR" Margin="10,10,10,10" BorderThickness="1,1,1,1" BorderBrush="Black">
                        <Grid>
                            <TextBox x:Name="Tb_Search_InvoiceNumber" Margin="5,5,5,5" VerticalAlignment="Center" TextChanged="Tb_Search_InvoiceNumber_TextChanged"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Suchen Nach: Organisation" Margin="10,10,10,10" BorderThickness="1,1,1,1" BorderBrush="Black">
                        <Grid>
                            <ComboBox x:Name="Comb_Search_Organization" Margin="5,5,55,5" VerticalAlignment="Center" HorizontalAlignment="Stretch" SelectionChanged="Comb_Search_Organization_SelectionChanged"/>
                            <Button x:Name="Comb_Search_Organization_Clear" Content="X" HorizontalAlignment="Right" Margin="0,0,15,0" Background="{x:Null}" Foreground="Red" FontWeight="Bold" FontSize="30" Click="Comb_Search_Organization_Clear_Click"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Suchen Nach: Datum" Margin="10,10,10,10" BorderThickness="1,1,1,1" BorderBrush="Black">
                        <Grid>
                            <DatePicker x:Name="Dp_Search_ExhibitionDate" IsTodayHighlighted="True" FirstDayOfWeek="Monday" SelectedDateFormat="Long"  Margin="5,5,5,5" VerticalAlignment="Center" HorizontalAlignment="Stretch" SelectedDateChanged="Dp_Search_ExhibitionDate_SelectedDateChanged"/>
                        </Grid>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <Grid Margin="0,40,350,0" Background="#FF232323">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <DataGrid Name="Dg_Invoices" 
                          ItemsSource="{Binding}" 
                          AutoGenerateColumns="False" 
                          CanUserReorderColumns="False" 
                          CanUserDeleteRows="False" 
                          CanUserAddRows="False" 
                          ClipboardCopyMode="IncludeHeader"
                          IsReadOnly="True"
                          MouseDoubleClick="DG_Invoices_MouseDoubleClick">
                    <DataGrid.Columns>
                        <DataGridHyperlinkColumn Header="Öffnen"  Binding="{Binding OpenInvoiceText}" />
                        <DataGridTextColumn Header="Ausstellungsdatum"  Binding="{Binding ExhibitionDate}"/>
                        <DataGridTextColumn Header="Organisation"  Binding="{Binding Organization}"/>
                        <DataGridTextColumn Header="Rechnungs Nr."  Binding="{Binding InvoiceNumber}"/>
                        <DataGridTextColumn Header="Betreff"  Binding="{Binding Reference}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
