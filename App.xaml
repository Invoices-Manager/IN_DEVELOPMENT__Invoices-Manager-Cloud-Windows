             xmlns:local="clr-namespace:InvoicesManager"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             StartupUri="Windows/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemeResources />
                <ui:XamlControlsResources />
