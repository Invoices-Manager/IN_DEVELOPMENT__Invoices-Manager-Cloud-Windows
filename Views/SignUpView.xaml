<Page x:Class="InvoicesManager.Views.SignUpView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InvoicesManager.Views"
      mc:Ignorable="d" 
          Title="Invoices Manager | Sign Up" 
        d:DesignHeight="1000" d:DesignWidth="1000">

    <Grid Background="{DynamicResource GridBackground}">
        <Label 
            Content="Sign Up" 
            Foreground="{DynamicResource FontForeground}"
            HorizontalAlignment="Center" 
            VerticalAlignment="Top" 
            Margin="0,50,0,0"
            FontSize="40"/>
        <TextBox x:Name="Tb_Username" HorizontalAlignment="Left" Margin="414,165,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="484" FontSize="40"/>
        <TextBox x:Name="Tb_FirstName" HorizontalAlignment="Left" Margin="414,328,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="484" FontSize="40"/>
        <TextBox x:Name="Tb_LastName" HorizontalAlignment="Left" Margin="414,399,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="484" FontSize="40"/>
        <TextBox x:Name="Tb_UserEmail" HorizontalAlignment="Left" Margin="414,249,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="484" FontSize="40"/>
        <PasswordBox x:Name="Tb_Password01" HorizontalAlignment="Left" Margin="425,532,0,0"  VerticalAlignment="Top" Width="484" FontSize="40"/>
        <PasswordBox x:Name="Tb_Password02" HorizontalAlignment="Left" Margin="425,595,0,0"  VerticalAlignment="Top" Width="484" FontSize="40"/>
        <Label Content="Username:" HorizontalAlignment="Left" Margin="200,165,0,0" VerticalAlignment="Top" FontSize="40"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="200,532,0,0" VerticalAlignment="Top" FontSize="40"/>
        <Label Content="Reapeat password:" HorizontalAlignment="Left" Margin="44,587,0,0" VerticalAlignment="Top" FontSize="40"/>
        <Button x:Name="Bttn_SignIn"  Content="Login" HorizontalAlignment="Left" Margin="414,777,0,0" VerticalAlignment="Top" FontSize="40" Click="Bttn_SignIn_Click"/>
        <Button x:Name="Bttn_SignUp"  Content="Sign Up" HorizontalAlignment="Left" Margin="394,686,0,0" VerticalAlignment="Top" FontSize="40" Click="Bttn_SignUp_Click"/>
        <Label Content="E-Mail:" HorizontalAlignment="Left" Margin="225,249,0,0" VerticalAlignment="Top" FontSize="40"/>
        <Label Content="FirstName:" HorizontalAlignment="Left" Margin="194,320,0,0" VerticalAlignment="Top" FontSize="40"/>
        <Label Content="LastName:" HorizontalAlignment="Left" Margin="190,395,0,0" VerticalAlignment="Top" FontSize="40"/>

    </Grid>
</Page>